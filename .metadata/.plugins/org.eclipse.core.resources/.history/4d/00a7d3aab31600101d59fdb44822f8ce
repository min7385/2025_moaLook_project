	<script>
	function submitForm(mode) {
	    const form = document.querySelector("form");

	    if (mode === "login") {
	        form.action = "${pageContext.request.contextPath}/loginDo";
	    } else if (mode === "join") {
	        form.action = "${pageContext.request.contextPath}/registDo";
	    }

	    form.submit(); // ğŸ”¥ ì´ë•Œ ì •í™•í•œ actionìœ¼ë¡œ submit ë¨
